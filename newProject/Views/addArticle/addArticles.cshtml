
@{
    ViewBag.Title = "addArticles";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .heading {
        text-align: center;
        margin-top: 10px;
        color: darkmagenta;
        margin-bottom: 10px;
        font-family: 'Italic Outline Art';
    }

    .add {
        padding-left: 20px;
        padding-right: 10px;
    }

    .exit {
        float: right;
        background-color: transparent;
        border: none;
        color: cornflowerblue;
        padding-right: 25px;
    }
</style>


<h2 class="heading">Add Articles</h2>
<a href="@Url.Action("recentarticles","try")"><button class="Exit">Back <i class="fa-solid fa-door-open"></i></button></a>

<div class="add">
    @using (Html.BeginForm("saveData", null, FormMethod.Post, new { @class = "", @enctype = "multipart/form-data" }))
    {
        <label> Article ID</label>

        <input type="text" class="form-control" placeholder="Article ID" name="articleId"><br />

        <label>Article Description</label>

        <input type="text" class="form-control" placeholder="Article Description" name="articleDescription"><br />

        <label>Image</label>
        <input type="file" value="Choose Image" name="SelectedImg"><br />

        <label>Caption</label>
        <input type="text" class="form-control" placeholder="Image Caption" name="caption"><br />

        <label>Article Date</label>


        <input type="text" class="form-control" placeholder="Article Date" name="articleDate"><br />

        <label>article Detail</label>

        <textarea height="50px" class="form-control" placeholder="Article detail" name="articleDetail"></textarea><br />
        <label>Author</label>
        <input type="text" class="form-control" placeholder="Author name" name="articleAuthor"><br />
        
        <label>Author Picture</label>
        <input type="file" value="Choose Image" name="SelectedImg1"><br />


        <input type="submit" value="Add +" class="btn btn-success" style="width: 100%; margin-top: 20px; height: 50px; font-size: 20px;">


    }
</div>