@model List<newProject.Models.recentNew>
@{
    ViewBag.Title = "tryPage";
    Layout = null;

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://kit.fontawesome.com/ed1b9ba61b.js" crossorigin="anonymous"></script>
<style>
    .heading {
        text-align: center;
        margin-top: 10px;
        color: darkmagenta;
        margin-bottom: 10px;
        font-family: 'Italic Outline Art';
    }

    .style {
        font-family: 'Italic Outline Art';
        color: darkmagenta;
    }

    .buttonsignout {
        float: right;
        background-color: transparent;
        border: none;
        color: cornflowerblue;
        padding-right: 25px;
    }
    .suc{
        padding-bottom:20px;
        padding-left:20px;
    }

    .table1 {
        padding-left: 10px;
        padding-right: 10px;
    }
</style>

<h2 class="heading">Recent News</h2>
<a href="@Url.Action("Index","Home")"><button class="buttonsignout">Sign Out <i class="fa-solid fa-right-from-bracket"></i></button></a>
<div class="table1">
    <table class="table" border="1">
        <tr>
            <th class="style">News ID</th>
            <th class="style">Description</th>
            <th class="style">Image</th>
            <th class="style">Caption</th>
            <th class="style">Date</th>
            <th class="style">Detail</th>
            <th class="style">Author</th>
        </tr>

        @foreach (var data in Model)
        {
            <tr>
                <td>@(data.newsId)</td>
                <td>@(data.newsDescription)</td>
                <td><img src="@(data.newsImage!=null?Url.Content(data.newsImage):"")" height="100" width="50" /></td>
                <td>@(data.imageCaption)</td>
                <td>@(data.newsDate)</td>
                <td>@(data.newsDetail)</td>
                <td>@(data.author)</td>
                <td><button><a href="@Url.Action("Delete", new {newsId=data.newsId})"><i class="material-icons" style="color:red;">delete</i></a></button></td>
                <td><button><a href="@Url.Action("edit101", new {key=data.newsId})"><i class="material-icons" style="color:green;">edit</i></a></button></td>


            </tr>
        }
    </table>
</div>
<div class="suc">
    <a href="@Url.Action("addRecord","addNews")"><button class="btn btn-success">Add News</button></a>
    <br />
</div>





