@model List<newProject.Models.recentNew>
@{
    ViewBag.Title = "tryPage";
    Layout = null;
  
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h2>Recent News</h2>
<table class="table" border="1">
    <tr>
        <th>News ID</th>
        <th>Description</th>
        <th>Image</th>
        <th>Caption</th>
        <th>Date</th>
        <th>Detail</th>
        <th>Author</th>
    </tr>
    @foreach (var data in Model)
    {
        <tr>
            <td>@(data.newsId)</td>
            <td>@(data.newsDescription)</td>
            <td><img src="@(data.newsImage!=null?Url.Content(data.newsImage):"")" height="100" width="50" /></td>
            <td>@(data.imageCaption)</td>
            <td>@(data.newsDate)</td>
            <td>@(data.newsDetail)</td>
            <td>@(data.author)</td>
            <td><button><a href="@Url.Action("Delete", new {newsId=data.newsId})"><i class="material-icons" style="color:red;">delete</i></a></button></td>
            <td><button><a href="@Url.Action("edit101", new {key=data.newsId})"><i class="material-icons" style="color:green;">edit</i></a></button></td>


        </tr>
    }
</table>

<a href="@Url.Action("addRecord","addNews")"><button class="btn btn-success">Add News</button></a>

